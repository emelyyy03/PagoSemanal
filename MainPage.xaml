<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagoSemanal.MainPage"
             Title="PagoSemanal">

    <StackLayout Padding="40">
        <Label Text="Algoritmo Pago Semanal"
           HorizontalTextAlignment="Center"
           TextColor="Black"/>
        <Entry x:Name="entryHT" Placeholder="Digite Horas Trabajadas" />
        <Entry x:Name="entryPH" Placeholder="Digite Pago Por Hora" />
        <Entry x:Name="entryPS" Placeholder="Pago Semanal:" />
        <Button Text="Toque para obtener el pago semanal" 
                BackgroundColor="LightPink"
                TextColor="Black"
                Clicked="Button_Clicked_1"/>
    </StackLayout>
</ContentPage>